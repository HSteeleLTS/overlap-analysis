        function createEvent(name, data) {
            var event;

            if (typeof window.CustomEvent === 'function') {
                event = new CustomEvent(name, { detail: data });
            } else {
                event = document.createEvent('Event');
                event.initEvent(name, false, false, data);
            }

            return event;
        }

        function captchaCallback() {
            grecaptcha.render("captchaTarget", {
                sitekey: "6LcpmX4UAAAAANrOrsaCHmMw5UNaCYgeE0l7Kyjl",
                size: "invisible",
                callback: function (captchaToken) {
                    var captchaSuccessEvent = createEvent("captcha:success", { token: captchaToken });
                    document.dispatchEvent(captchaSuccessEvent);
                },
                "expired-callback": function () {
                    var captchaExpiredEvent = createEvent("captcha:expired");
                    document.dispatchEvent(captchaExpiredEvent);
                },
                "error-callback": function () {
                    var captchaErrorEvent = createEvent("captcha:error");
                    document.dispatchEvent(captchaErrorEvent);
                },
            });
        }
